<% content_for :precontent do %>

<div id="heroCarousel" class="carousel slide">  
  <!-- Carousel items -->  
  <div class="carousel-inner">  
    <% @page.images.each_with_index do |i,c| %>
    <div class="item <%= 'active' if c==0 %>">
      <%= image_tag i.the_image_url(:reasonable) %>
      <div class="caption">
	<h1 class="heroheader"><%= i.title %></h1>
	<div class="herodescription">
	  <%= sanitize i.description %>
	</div>
      </div>
    </div>  
    <% end %>
  </div>  
  <!-- Carousel nav -->  
  <a class="carousel-control left" href="#heroCarousel" data-slide="prev">‹</a>  
  <a class="carousel-control right" href="#heroCarousel" data-slide="next">›</a>  
</div> 
<% end %>





<div class="container">
  

  <div class="row">

    <div class="span8">
      <h1 id="pagetitle"><%= @page.title %></h1>
      <div class="introduction">
	<%= raw @page.introduction %>
      </div>
      
      <div class="body">
	<%= raw @page.body %>
      </div>
    </div>
      <div class="span2">
	<%=  mylinkbutton "<i class='icon-edit'></i> Edit", edit_page_path(@page)   if can? :edit, Page %> 

	<% if @page.parent %>
	<h4><%= link_to "Back to #{@page.parent.title}",@page.parent%></h4>
	<% end %>
	
	<% if @page.children %>
	<ul>
	  <% @page.children.each do |c|%>
	  <li>
	    <h4><%= link_to "#{c.title}",c %></h4>
	  </li>
	</ul>
	<% end %>
	<% end %>


      </div>

    </div>
  </div>
      


