<h1>Listing titles</h1>

<div class="container">

  <div class="row">
    <div class="span7">
      <% @titles.each do |title| %>
      <%= render title  %>
      <% end %>
    <%= paginate @titles %>
    </div>
    <div class="span5">
      <%=  mylinkbutton "<i class='icon-plus'></i> New Title", new_title_path   if can? :create, Title %>
      <%= form_tag '/titles',method: :get %>
      <%= text_field_tag "searchquery",@searchquery %>
      <%= submit_tag "Search"%>
      </form>
    </div>
  </div>
  

