<div class="container">
  <div class="row">
    <div class="span8">
      <table class="table">
	<tr>
	  <th>Title</th>
	  <th>Author(s)</th>
	  <th># in stock</th>
	  <th># sold</th>
	  <th># on order</th>
	  <th>Blurbed?</th>
	  <th>Categorized?</th>
	</tr>
	<% @titles.each do |title| %>
	<tr>
	  <td><%= link_to title.title,title%></td>
	  <td><small><%= sanitize contributors_list(title)%></small></td>
	  <td><%= title.in_stock %></td>
	  <td><%= title.sold %></td>
	  <td><%= title.on_order %></td>
	  <td><%= blurb_status(title) %></td>
	  <td><%= category_status(title) %></td>
	</tr>
	<% end %>
      </table>
    </div>
    <div class="span4">
      <%= render '/dashboard/search' %>
    </div>
  </div>
</div>
