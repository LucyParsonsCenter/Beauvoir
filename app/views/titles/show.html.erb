<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="span2">
      <%= image_tag @edition.cover_url(:medium),:class=>"bookcover" unless @edition.nil? %>

    </div>
    <div class="span7">
      <div style="float:right">
	<%=  mylinkbutton "<i class='icon-edit'></i> Edit", edit_title_path(@title)   if can? :edit, Title %>
      </div>
      <h1 class="booktitle"><%= @title.title %></h1>
      <h2 class="contributors">
	<%= sanitize contributors_list(@title) %>
      </h2>

<div class="introduction">
  <%= sanitize @title.introduction %>
</div>


<div class="description">
  <%= sanitize @title.description %>
</div>
</div>

<div class="span3">
  <%= status_and_price(@edition) unless @edition.nil? %>
  <%= buy_or_order(@edition) unless @edition.nil? %>  
  <table class="table">
  <tr>
    <th>ISBN</th>
    <td><%= @edition.isbn13 unless @edition.nil? %></td>
  </tr>
  <tr>
    <th>List price</th>
    <td>$<%= @edition.list_price unless @edition.nil? %></td>
  </tr>
  <tr>
    <th>Publisher</th>
    <td><%= @edition.publisher.name unless @edition.publisher.nil? %></td>
  </tr>
  <tr>
    <th>Year of publication</th>
    <td><%= @edition.year_of_publication unless @edition.nil? %></td>
  </tr>
  
  <tr>
    <th>Other editions</th>
    <td>
      <ul class="editions">
      <% @title.editions.without_edition(@edition).each do |e| %>
      <li><%= link_to e, e %>
	<% end %>
      </ul>
    </td>
  
</table>
</div>
</div>
</div>


<% content_for :related do %>

<div class="span3">
hey
</div>
<div class="span3">
more stuff
</div>
<div class="span3">
tk
</div>
<div class="span3">
coming soon
</div>

<% end %>
